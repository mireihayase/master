
      <div class="form_signin">
        <h2 class ="">brainstorm<span>新規登録</span></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="nyuuryoku"><%= f.label :email %>
          <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力' %></div>

          <div class="nyuuryoku"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
            <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力' %></div>

          <div class="nyuuryoku"><%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワードを入力（確認）' %></div>

          <div class="">
              <div class="">
                <%= f.submit class: "btn btn-large btn-success"%>
              </div></div>

  <div class="">
    <strong>すでにアカウントを持っていますか？</strong><br>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>

